            "dependsOn": [
                "build_lib",
                "compile_ts",
                "build_assets_dev"
            ]
        },
        {
            "label": "compile_ts",
            "type": "npm",
            "script": "build",
            "options": {
                "cwd": "${workspaceFolder}/web-server"
            }
        },
        {
            "label": "build_lib",
            "type": "npm",
            "script": "build_lib",
            "options": {
                "cwd": "${workspaceFolder}/web-react"
            }
        },
        {
            "label": "build_assets_dev",
            "type": "npm",
            "script": "build_assets_dev",
            "options": {
                "cwd": "${workspaceFolder}/web-react"
            }
        }
        
    ]
  }